@using OfficeManager.Areas.Administration.ViewModels.Tenants
@model TenantWithAllOfficesViewModel
@{
    ViewData["Title"] = "Add Offices";
}

<div style="padding: 5%;">
    <h1 class="display-4 text-center mb-5">Add Offices to Tenant</h1>
    <h5 style="margin-top:50px; margin-bottom:20px; text-align:left;"><i>Available Offices</i></h5>
    <form asp-area="Administration" asp-controller="Tenants" asp-action="AddOffices" method="post" class="form">
        <input type="hidden" name="id" value="@Model.Id" />

        @{var availaleOffices = Model.AvailavleOffices.OrderBy(x => x.Name).ToList(); }
        @for (var i = 0; i < availaleOffices.Count(); i++)
        {
            <div>
                <input name="AreChecked" type="checkbox" value="@availaleOffices[i].Name" /> @availaleOffices[i].Name<br />
            </div>
        }
        <br />
        <button type="submit" class="btn btn-primary" style="width:195px">Add</button>
        <a class="btn btn-dark" href="/Administration/Tenants/Details?id=@Model.Id" role="button" style="width:195px">Back</a>
    </form>
</div>