@using OfficeManager.Areas.Administration.ViewModels.Tenants
@model AllTenantsViewModel

@{
    ViewData["Title"] = "All Tenants";
}

<h1 class="display-4" style="margin: 2%; text-align: center;">All Tenants</h1>
<div style="padding: 5%;">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <a asp-action="All" style="color:white" asp-route-sortOrder="@ViewData["CompanyNameSortParm"]">Company Name &#x21C5;</a>
                </th>
                <th scope="col">
                    <a asp-action="All" style="color:white" asp-route-sortOrder="@ViewData["OwnerSortParam"]">Company Owner</a>
                    <span style="font-size:large">&#8595;</span>
                </th>
                <th scope="col">Bulstat</th>
                <th scope="col" colspan="2">Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tenant in Model.Tenants)
            {
                <tr>
                    <td>@tenant.CompanyName</td>
                    <td>@tenant.CompanyOwner</td>
                    <td>@tenant.Bulstat</td>
                    <td>@tenant.Address</td>
                    <td>
                        <div class="button-holder text-right">
                            <a href="/Administration/Tenants/Details?id=@tenant.Id" class="btn btn-primary">Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
