@using OfficeManager.Areas.Administration.ViewModels.Tenants
@model TenantWithAllOfficesViewModel
@{
    ViewData["Title"] = "Remove Offices";
}

    <div style="padding: 5%;">
        <h1 class="display-4 text-center mb-5">Remove Offices from Tenant</h1>
        <h5><i>Curent Tennant Offices</i></h5>

        <form asp-area="Administration" asp-controller="Tenants" asp-action="RemoveOffices" method="post" class="form">
            <input type="hidden" name="id" value="@Model.Id" />

            @{var tenantOffices = Model.CurrentOffices.OrderBy(x => x.Name).ToList(); }
            @for (var i = 0; i < tenantOffices.Count(); i++)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" name="AreChecked" id="customCheck@(i)" value="@tenantOffices[i].Name">
                    <label class="custom-control-label" for="customCheck@(i)">@tenantOffices[i].Name</label>
                </div>
            }
            <div class="row mt-4">
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-2 mb-sm-0 mr-sm-2">
                    <button type="submit" class="btn btn-danger btn-block">Remove</button>
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <a class="btn btn-dark btn-block" href="/Administration/Tenants/Details?id=@Model.Id">Back</a>
                </div>
            </div>            
        </form>
    </div>
