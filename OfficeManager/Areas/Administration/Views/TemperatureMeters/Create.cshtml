@using OfficeManager.Areas.Administration.ViewModels.TemperatureMeters
@model CreateTemperatureMeterViewModel

@{
    ViewData["Title"] = "Create Temperature Meter";
}

<div style="padding: 5%;">
<h1 class="display-4" style="margin-bottom: 100px; text-align: center;">Create Temperature Meter</h1>
    <form asp-area="Administration" asp-controller="TemperatureMeters" asp-action="Create" method="post">
        <div class="row" style="margin-bottom:20px">
            <div class="col-5">
                <label asp-for="Name"><i>Temperature Meter Name</i></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width:195px">Create</button>
        <a class="btn btn-dark" href="/Administration/TemperatureMeters/All" role="button" style="width:195px">Back</a>
    </form>
</div>