@using OfficeManager.Areas.Administration.ViewModels.PricesInformation
@model CurrentPricesOutputViewModel

@{
    ViewData["Title"] = "Current Prices";
}

    <div style="padding: 5%;">
        <h1 class="display-4 text-center mb-5">Current Prices</h1>
        <p><i>Created on: @Model.CreatedOn</i></p>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Desctiption </th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Price per KWh for heating</td>
                        <td>@Model.HeatingPerKWh лв.</td>
                    </tr>
                    <tr>
                        <td>Price per KWh for cooling</td>
                        <td>@Model.CoolingPerKWh лв.</td>
                    </tr>
                    <tr>
                        <td>Price per KWh for electricity</td>
                        <td>@Model.ElectricityPerKWh лв.</td>
                    </tr>
                    <tr>
                        <td>Price for Excise</td>
                        <td>@Model.Excise лв.</td>
                    </tr>
                    <tr>
                        <td>Price for Access to distribution grid</td>
                        <td>@Model.AccessToDistributionGrid лв.</td>
                    </tr>
                    <tr>
                        <td>Price for Network taxes and utilities</td>
                        <td>@Model.NetworkTaxesAndUtilities лв.</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row mt-4">
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-2 mb-sm-0 mr-sm-2">
                <a href="/Administration/PricesInformation/CreatePricelist" class="btn btn-primary btn-block">Create new pricelist</a>
            </div>
        </div>
