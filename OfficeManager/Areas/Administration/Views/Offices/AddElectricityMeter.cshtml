@using OfficeManager.Areas.Administration.ViewModels.Offices
@model OfficeWithAllElectricityMetersViewModel
@{
    ViewData["Title"] = "Add Electricity Meter";
}

<div style="padding: 5%;">
    <h1 class="display-4 text-center mb-5">Add Electricity Meter to Office</h1>
    <h5><i>Available Electricity Meters</i></h5>
    <form asp-area="Administration" asp-controller="Offices" asp-action="AddElectricityMeter" method="post" class="form">
        <input type="hidden" name="id" value="@Model.Id" />

        @{ var counter = 0; }
        @foreach (var electricityMeter in Model.AvailavleElectricityMeters.OrderBy(x => x.Name))
        {
            <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" name="IsChecked" id="customCheck@(counter)" value="@electricityMeter.Name">
                <label class="custom-control-label" for="customCheck@(counter++)">@electricityMeter.Name</label>
            </div>
        }
        <div class="row mt-4">
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-2 mb-sm-0 mr-sm-2">
                <button type="submit" class="btn btn-success btn-block">Add</button>
            </div>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a class="btn btn-dark btn-block" href="/Administration/Offices/Edit?id=@Model.Id">Back</a>
            </div>
        </div>
    </form>
</div>
