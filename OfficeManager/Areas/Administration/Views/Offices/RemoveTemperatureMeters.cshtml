@using OfficeManager.Areas.Administration.ViewModels.Offices
@model OfficeWithCurrentTemperatureMetersViewModel
@{
    ViewData["Title"] = "Remove Temperature Meters";
}

<div style="padding: 5%;">
    <h1 class="display-4 text-center mb-5">Remove Temperature Meters</h1>
    <h5><i>Curent Temperature Meters</i></h5>
    <form asp-controller="Offices" asp-action="RemoveTemperatureMeters" method="post" class="form">
        <input type="hidden" name="id" value="@Model.Id" />

        @{var temperatureMeters = Model.CurrentTemperatureMeters.ToList(); }
        @for (var i = 0; i < temperatureMeters.Count(); i++)
        {
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="AreChecked" id="customCheck@(i)" value="@temperatureMeters[i].Name">
                <label class="custom-control-label" for="customCheck@(i)"> @temperatureMeters[i].Name</label>
            </div>
        }
        <div class="row mt-4">
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-2 mb-sm-0 mr-sm-2">
                <button type="submit" class="btn btn-danger btn-block">Remove</button>
            </div>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a class="btn btn-dark btn-block" href="/Administration/Offices/Edit?id=@Model.Id">Back</a>
            </div>
        </div>
    </form>
</div>
