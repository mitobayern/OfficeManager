@using OfficeManager.ViewModels.Measurements
@model PaginatedList<AllMeasurementsOutputViewModel>

@{
    ViewData["Title"] = "All Measurements";
}

<div style="padding: 5%;">
    <h1 class="display-4 text-center mb-5">All Measurements</h1>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <a style="color:white"
                       asp-action="All"
                       asp-route-sortOrder="@ViewData["MeasurementsSortParam"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-rowsPerPage="@ViewData["RowsPerPage"]">
                        Created On
                    </a>
                </th>
                <th scope="col">
                    Period
                </th>
                <th scope="col" class="text-right">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var measurement in Model)
            {
                <tr>
                    <td>@(measurement.CreatedOn.ToString("d MMMM yyyy", new System.Globalization.CultureInfo("bg-BG")) + " г.")</td>
                    <td>@measurement.Period</td>
                    <td>
                        <div class="button-holder text-right">
                            <a href="/Measurements/Edit?period=@measurement.StartOfPeriod" class="btn btn-primary">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_PaginationPartial" />
</div>