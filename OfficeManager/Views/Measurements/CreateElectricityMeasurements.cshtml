@using OfficeManager.ViewModels.Measurements
@model CreateElectricityMeasurementsInputViewModel
@{
    ViewData["Title"] = "Create Electricity Measurements";
}

<h1 class="display-4" style="margin: 2%; text-align: center;">Create Electricity Measurements</h1>
<br />
<br />
<i style="color:orangered;"><b>Last period: @Model.LastPeriod</b></i>
<br />
<br />

<form class="form-horizontal" method="post">
    <div class="row" style="margin-bottom:20px">
        <div class="col-3">
            <label asp-for="StarOfPeriod"><i>Start of Period</i></label>
            <input asp-for="StarOfPeriod" class="form-control" asp-format="{0:MM/dd/yyyy}">
        </div>
        <div class="col-3">
            <label asp-for="EndOfPeriod"><i>End of Period</i></label>
            <input asp-for="EndOfPeriod" class="form-control" asp-format="{0:MM/dd/yyyy}">
        </div>
    </div>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Office Number</th>
                <th>DayTime Measurement</th>
                <th>NightTime Measurement</th>
            </tr>
        </thead>
        @for (var i = 0; i < Model.ElectricityMeters.Count; i++)
        {
            <tr>
                <td>
                    <input style="border:none; background:none" type="text" name="ElectricityMeters[@i].Name" value="@Model.ElectricityMeters[i].Name" readonly />
                </td>
                <td>
                    @*<input type="text" asp-for="@Model.ElectricityMeters[i].DayTimeMeasurement" />*@
                    <input type="text" name="ElectricityMeters[@i].DayTimeMeasurement" />
                </td>
                <td>
                    <input type="text" name="ElectricityMeters[@i].NightTimeMeasurement" />
                </td>
            </tr>
        }

    </table>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>